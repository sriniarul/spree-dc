<% if can?(:manage, current_store) %>
  <li class="nav-item" role="presentation">
    <%= link_to spree.admin_vendors_path, class: "nav-link #{'active' if controller_name == 'vendors'}" do %>
      <%= icon 'heart-handshake' %>
      <%= Spree.t(:vendors) %>

      <% pending_count = Spree::Vendor.pending.count %>
      <% if pending_count > 0 %>
        <span class="badge badge-warning ml-auto rounded-pill" title="<%= pending_count %> pending approval">
          <%= pending_count %>
        </span>
      <% end %>
    <% end %>
  </li>

  <ul class="nav-submenu d-none">
    <li class="nav-item" role="presentation">
      <%= link_to spree.admin_social_media_path, class: "nav-link #{'active' if controller_name.start_with?('social_media')}" do %>
        <%= Spree.t('admin.social_media.nav_label', default: 'Social Media') %>
      <% end %>
    </li>
  </ul>
<% end %>
