<% content_for :page_title do %>
  <%= Spree.t(:social_media_dashboard) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to Spree.t(:connect_account), admin_social_media_accounts_path, class: 'btn btn-primary', data: { turbo: false } %>
<% end %>

<div class="row">
  <!-- Overview Cards -->
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title text-muted">Connected Accounts</h5>
            <h2 class="mb-0"><%= @connected_accounts_count || 0 %></h2>
          </div>
          <i class="fas fa-users fa-2x text-primary"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title text-muted">Posts This Month</h5>
            <h2 class="mb-0"><%= @posts_this_month || 0 %></h2>
          </div>
          <i class="fas fa-image fa-2x text-success"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title text-muted">Scheduled Posts</h5>
            <h2 class="mb-0"><%= @scheduled_posts_count || 0 %></h2>
          </div>
          <i class="fas fa-clock fa-2x text-warning"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title text-muted">Total Engagement</h5>
            <h2 class="mb-0"><%= number_with_delimiter(@total_engagement || 0) %></h2>
          </div>
          <i class="fas fa-heart fa-2x text-danger"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <!-- Quick Actions -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Quick Actions</h5>
      </div>
      <div class="card-body">
        <div class="list-group list-group-flush">
          <%= link_to admin_social_media_accounts_path, class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
            <div>
              <i class="fas fa-cog text-info me-2"></i>
              <%= Spree.t(:manage_accounts) %>
            </div>
            <i class="fas fa-chevron-right"></i>
          <% end %>

          <%= link_to admin_social_media_posts_path, class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
            <div>
              <i class="fas fa-plus-circle text-primary me-2"></i>
              <%= Spree.t(:create_new_post) %>
            </div>
            <i class="fas fa-chevron-right"></i>
          <% end %>

          <%= link_to admin_social_media_analytics_path, class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
            <div>
              <i class="fas fa-chart-bar text-success me-2"></i>
              <%= Spree.t(:view_analytics) %>
            </div>
            <i class="fas fa-chevron-right"></i>
          <% end %>

          <%= link_to admin_social_media_campaigns_path, class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
            <div>
              <i class="fas fa-calendar text-warning me-2"></i>
              <%= Spree.t(:campaigns) %>
            </div>
            <i class="fas fa-chevron-right"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Recent Activity</h5>
      </div>
      <div class="card-body">
        <% if @recent_posts && @recent_posts.any? %>
          <div class="list-group list-group-flush">
            <% @recent_posts.first(5).each do |post| %>
              <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <small class="text-muted"><%= time_ago_in_words(post.created_at) %> ago</small>
                  <div><%= truncate(post.content || '', length: 50) %></div>
                </div>
                <span class="badge bg-<%= post.status == 'published' ? 'success' : 'warning' %>">
                  <%= post.status&.humanize || 'Draft' %>
                </span>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center text-muted">
            <i class="fas fa-inbox fa-3x mb-3"></i>
            <p>No recent activity. Start by creating your first post!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>