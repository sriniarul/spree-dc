<% content_for :page_actions do %>
  <%= render_admin_partials(:vendors_actions_partials) %>
  <%= link_to_with_icon 'plus', Spree.t('admin.vendors.new_vendor'), new_admin_vendor_path, 
                        class: 'btn btn-primary' if can?(:create, Spree::Vendor) %>
<% end %>

<%= render_admin_partials(:vendors_header_partials) %>

<%= turbo_frame_tag 'vendors', autoscroll: true, data: { autoscroll_block: :start, autoscroll_behavior: :smooth, turbo_action: 'advance' } do %>
  <div class="card-lg">
    <%= render 'filters' %>

    <% if paginated_collection.any? %>
      <div class="table-responsive" id="listing_vendors">
        <table class="table">
          <thead>
            <%= render 'table_header' %>
          </thead>
          <tbody>
            <%= render partial: 'table_row', collection: paginated_collection, as: :vendor %>
          </tbody>
        </table>
      </div>

      <%= render 'spree/admin/shared/index_table_options', collection: paginated_collection %>
    <% else %>
      <%= render 'spree/admin/shared/no_resource_found', 
                 new_object_url: (new_admin_vendor_path if can?(:create, Spree::Vendor)) %>
    <% end %>
  </div>
<% end %>