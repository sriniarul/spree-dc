<% if Rails.env.development? || ENV['VAPID_PUBLIC_KEY'].present? %>
  <div id="spree-push-notification-banner" style="display: none;">
    <h4><%= t('spree_push_notifications.banner.title', default: 'Stay Updated') %></h4>
    <p><%= t('spree_push_notifications.banner.message', default: 'Get notifications about special offers, discounts, and order updates.') %></p>
    <div class="spree-notification-buttons">
      <button id="spree-notification-allow">
        <%= t('spree_push_notifications.banner.allow', default: 'Allow') %>
      </button>
      <button id="spree-notification-deny">
        <%= t('spree_push_notifications.banner.deny', default: 'Not Now') %>
      </button>
    </div>
  </div>

  <div id="spree-notification-success" style="display: none;">
    <%= t('spree_push_notifications.banner.success', default: 'Notifications enabled! Thank you.') %>
  </div>
<% end %>